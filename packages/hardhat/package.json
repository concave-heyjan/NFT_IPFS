{
  "name": "concavecation-hardhat",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "concave",
  "license": "MIT",
  "engines": {
    "node": ">= 16"
  },
  "scripts": {
    "compile": "hardhat compile",
    "node": "hardhat node",
    "test": "npm run test:coverage",
    "test:unit": "hardhat test --logs",
    "test:coverage": "hardhat coverage",
    "test:coverage:check": "nyc check-coverage",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:js": "eslint \"**/*.{js,ts}\"",
    "lint:sol": "solhint contracts/**/*.sol",
    "lint:fix": "npm run lint:js:fix && npm run lint:sol:fix",
    "lint:js:fix": "eslint --fix \"**/*.{js,ts}\"",
    "lint:sol:fix": "solhint --fix contracts/**/*.sol",
    "prettier": "npm run prettier:js && npm run prettier:sol",
    "prettier:write": "npm run prettier:js:write && npm run prettier:sol:write",
    "prettier:js": "prettier --check .",
    "prettier:js:write": "prettier --write .",
    "prettier:sol": "prettier --check 'contracts/**/*.sol'",
    "prettier:sol:write": "prettier --write 'contracts/**/*.sol'",
    "deploy:localhost": "hardhat --network localhost deploy",
    "deploy:mumbai": "hardhat --network mumbai deploy",
    "deploy:polygon": "hardhat --network polygon deploy",
    "verify:mumbai": "hardhat verify --network mumbai --constructor-args arguments.js",
    "verify:polygon": "hardhat verify --network polygon --constructor-args arguments.js",
    "deploy:rinkeby": "hardhat --network rinkeby deploy",
    "deploy:ethereum": "hardhat --network polygon deploy",
    "verify:rinkeby": "hardhat verify --network rinkeby --constructor-args arguments.js",
    "verify:ethereum": "hardhat verify --network ethereum --constructor-args arguments.js"
  },
  "devDependencies": {
    "@biconomy/mexa": "^2.0.24",
    "@nomiclabs/hardhat-ethers": "^2.0.3",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "4.4.1",
    "@typechain/ethers-v5": "^8.0.5",
    "@typechain/hardhat": "^3.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "chai": "^4.3.4",
    "chai-ethers": "0.0.1",
    "dotenv": "^10.0.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.2",
    "hardhat": "^2.8.0",
    "hardhat-deploy": "^0.9.14",
    "hardhat-deploy-ethers": "^0.3.0-beta.11",
    "hardhat-gas-reporter": "^1.0.6",
    "hardhat-preprocessor": "^0.1.4",
    "hardhat-tracer": "^1.0.0-alpha.6",
    "nyc": "^15.1.0",
    "prettier-plugin-organize-imports": "^2.3.4",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "^0.7.17",
    "ts-node": "^10.4.0",
    "typechain": "^6.0.5",
    "typescript": "^4.5.4"
  },
  "nyc": {
    "cache": true,
    "extension": [
      ".sol"
    ],
    "temp-dir": "./coverage",
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100
  }
}
